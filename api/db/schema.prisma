datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

// Define your own datamodels here and run `yarn redwood prisma migrate dev`

model User {
  id             String    @id
  email          String    @unique
  name           String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  accounts       Account[] @relation("PrimaryUser")
  linkedAccounts Account[] @relation("LinkedUser")
}

model Account {
  id            Int           @id @default(autoincrement())
  status        String
  name          String
  user          User          @relation("PrimaryUser", fields: [userId], references: [id])
  linkedUser    User?         @relation("LinkedUser", fields: [linkedUserId], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  userId        String
  linkedUserId  String?
  accountUserId Int
  Transaction   Transaction[]

  @@unique([name, userId], name: "UniqueAccountName")
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Int
  debit       Boolean
  title       String
  description String
  account     Account  @relation(fields: [accountId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  accountId   Int
}
